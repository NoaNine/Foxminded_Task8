                           Margin="4 0 0 0"/>
            </StackPanel>
            <ListView ItemsSource="{Binding}">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="First name" 
                                        Width="auto" 
                                        DisplayMemberBinding="{Binding}" />
                        <GridViewColumn Header="Last name" 
                                        Width="auto" 
                                        DisplayMemberBinding="{Binding}" />
                    </GridView>
                </ListView.View>
            </ListView>
        </StackPanel>-->
    </Grid>
</UserControl>
