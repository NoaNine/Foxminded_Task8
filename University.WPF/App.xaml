<Application x:Class="University.WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:University.WPF" 
             xmlns:locator="clr-namespace:University.WPF.Infrastructure">

    <Application.Resources>
        <ResourceDictionary>
            <locator:ViewModelLocator
                x:Key="Locator"/>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Common.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Button.xaml"/>
                <ResourceDictionary Source="Resources/Styles/TextBlock.xaml"/>
                <ResourceDictionary Source="Resources/Styles/RadioButton.xaml"/>
                <ResourceDictionary Source="Resources/DataTemplate.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
